<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SandboxTreeView.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SandboxTreeView"
    xmlns:pages="clr-namespace:SandboxTreeView.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>

        <Tab Title="Simple">
            <ShellContent
            Title="Simple"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" />
        </Tab>
        <Tab Title="FileSystem">
            <ShellContent Title="FileSystem"
                      ContentTemplate="{DataTemplate pages:FileSystemPage}"
                      Route="FileSystem"/>
        </Tab>
        <Tab Title="FileSystem (Custom)">
            <ShellContent Title="Custom Template"
                      ContentTemplate="{DataTemplate pages:FileSystemCustomTemplatePage}"
                      Route="Custom"/>
        </Tab>
        <Tab Title="Selection">
            <ShellContent Title="Custom Template"
                      ContentTemplate="{DataTemplate pages:SelectionPage}"
                      Route="Custom"/>
        </Tab>
    </TabBar>

</Shell>
